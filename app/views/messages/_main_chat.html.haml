.chat-main
  .group-info
    .group-info__left-box
      %h2.group-info__left-box__current-group{"data-group_id" => "#"}
        = @group.name
      %ul.group-info__left-box__member-list
        Menber:
        %li.group-info__left-box__member-list__member 
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group.id) do
      .group-info__edit-btn edit

  .message-lists
    = render @messages
    .message-list{"data-message_id" => "#"}
      .message-list__upper-info
        %p.message-list__upper-info__talker zxc
        %p.message-list__upper-info__date 2020/05/11(Mon) 16:01:48
      %p.message-list__text  こんにちは

  .message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'

